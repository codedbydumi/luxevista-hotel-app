<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewService"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#1A1A2E"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Accent Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#4ECDC4" />

        <!-- Service Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Service Header with Icon/Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/serviceImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/service_icon_bg"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/serviceIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/service_icon_bg"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/serviceTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SERVICE DETAILS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />
            </LinearLayout>

            <!-- Service ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Service ID: "
                    android:textColor="#B8B8FF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/serviceId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="001"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Service Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Service: "
                    android:textColor="#B8B8FF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/serviceName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Room Cleaning"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Service Description -->
            <LinearLayout
                android:id="@+id/serviceDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textColor="#B8B8FF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/serviceDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Professional service with attention to detail and premium quality."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>

            <!-- Service Price -->
            <LinearLayout
                android:id="@+id/servicePriceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textColor="#B8B8FF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/servicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$50.00"
                    android:textColor="#4ECDC4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2D3748"
                android:layout_marginBottom="20dp" />

            <!-- Book Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#6C63FF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/bookButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="BOOK NOW"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>