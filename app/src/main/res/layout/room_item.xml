<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#16213E"
    app:cardCornerRadius="20dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Accent Color Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#2196F3" />

        <!-- Room Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Room Icon and Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#2196F3"
                    android:text="🏨"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/roomNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Room 101"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Premium Ocean Suite"
                        android:textSize="14sp"
                        android:textColor="#B8B8FF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Room Description -->
            <TextView
                android:id="@+id/roomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Luxurious suite with panoramic ocean views, premium amenities, and exclusive concierge service. Perfect for couples seeking a romantic getaway."
                android:textSize="15sp"
                android:textColor="#CCCCCC"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-light" />

            <!-- Features Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌊"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocean View"
                    android:textSize="12sp"
                    android:textColor="#4ECDC4"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📶"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi"
                    android:textSize="12sp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Rating Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐⭐⭐⭐⭐"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 (324 reviews)"
                    android:textSize="12sp"
                    android:textColor="#B8B8FF" />

            </LinearLayout>

            <!-- Price and Booking Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starting from"
                        android:textSize="12sp"
                        android:textColor="#B8B8FF" />

                    <TextView
                        android:id="@+id/roomPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$299 per night"
                        android:textSize="18sp"
                        android:textColor="#4ECDC4"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Book Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:cardBackgroundColor="#6C63FF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <Button
                        android:id="@+id/bookBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOOK NOW"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.05" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Availability Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✅"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/availabilityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Now - Limited Time Offer"
                    android:textSize="12sp"
                    android:textColor="#4ECDC4"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>